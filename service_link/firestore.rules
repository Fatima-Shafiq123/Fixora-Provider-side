rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is provider
    function isProvider() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/providers/$(request.auth.uid)).data.userType == 'provider';
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/roles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'admin';
    }

    // Providers collection
    match /providers/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can write their own data, admins can write all
      allow write: if isOwner(userId) || isAdmin();
      
      // KYC documents subcollection
      match /kyc_documents/{document} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // Security subcollection (MFA, etc.)
      match /security/{document} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Services collection
    match /services/{serviceId} {
      // Anyone can read services
      allow read: if true;
      
      // Only providers can create services
      allow create: if isAuthenticated() && 
                       isProvider() &&
                       request.resource.data.providerId == request.auth.uid;
      
      // Only service owner can update/delete
      allow update, delete: if isAuthenticated() && 
                               resource.data.providerId == request.auth.uid;
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Users can read their own bookings
      allow read: if isAuthenticated() && 
                     (resource.data.clientId == request.auth.uid || 
                      resource.data.providerId == request.auth.uid);
      
      // Clients can create bookings
      allow create: if isAuthenticated() && 
                       request.resource.data.clientId == request.auth.uid;
      
      // Only booking participants can update
      allow update: if isAuthenticated() && 
                       (resource.data.clientId == request.auth.uid || 
                        resource.data.providerId == request.auth.uid);
      
      // Only booking participants can delete
      allow delete: if isAuthenticated() && 
                       (resource.data.clientId == request.auth.uid || 
                        resource.data.providerId == request.auth.uid);
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      
      // Only authenticated users can create reviews
      allow create: if isAuthenticated() && 
                       request.resource.data.clientId == request.auth.uid;
      
      // Only review author can update/delete
      allow update, delete: if isAuthenticated() && 
                               resource.data.clientId == request.auth.uid;
    }

    // Users collection (clients)
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId);
      
      // Users can write their own data
      allow write: if isOwner(userId);
    }

    // Consents collection
    match /consents/{userId} {
      // Users can read their own consents
      allow read: if isOwner(userId);
      
      // Users can write their own consents
      allow write: if isOwner(userId);
    }

    // Roles collection (admin management)
    match /roles/{userId} {
      // Only admins can read/write roles
      allow read, write: if isAdmin();
    }

    // Audit logs collection
    match /auditLogs/{logId} {
      // Only admins can read audit logs
      allow read: if isAdmin();
      // Only system can write (via admin service)
      allow write: if isAdmin();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

